generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  fantasy      String
  adress       String
  phones       Int
  password     String
  clients      Client[]
  products     Product[]
  orders       Order[]
  active       Boolean
  userpersonal UserPersonal?
  usercompany  UserCompany?
}

model UserPersonal {
  id     String @id @default(uuid())
  userId String @unique
  name   String
  CPF    String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model UserCompany {
  id     String @id @default(uuid())
  userId String @unique
  CNPJ   String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Client {
  id       String @id @default(uuid())
  clientId String @unique
  name     String
  email    String @unique
  adress   String
  phones   Int
  password String
  user     User   @relation(fields: [clientId], references: [id])
}

model Product {
  id        String @id @default(uuid())
  productId String @unique
  name      String
  price     Float
  user      User   @relation(fields: [productId], references: [id])
}

model Order {
  id      String @id @default(uuid())
  orderId String @unique
  name    String
  user    User   @relation(fields: [orderId], references: [id])
}
